<%= stylesheet_link_tag :questions %>
<p id="notice"><%= notice %></p>

<p>
  <b>Question:</b>
  <%= @response.question.question_text %>
</p>

<p>
  <b>Chosen Answer:</b>
  <%= @response.answer %>
</p>

<p>
  <b>Answered by:</b>
  <%= @response.user.name %>
</p>



<%= link_to 'Edit', edit_response_path(@response), :class => "button2" %> 
<%= link_to 'Back', list_questions_path, :class => "button2" %>

<%= link_to 'Back to Questions', root_url, :class => "button2" %>
